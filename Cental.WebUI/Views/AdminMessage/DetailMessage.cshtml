    ViewData["Title"] = "DetailMessage";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div>
    <label>Ad Soyad</label>
    <span class="form-control" readonly>@Model.FullName</span>
</div>
<br />

<div>
    <label>Email</label>
    <span class="form-control" readonly>@Model.Email</span>
</div>
<br />

<div>
    <label>Konu</label>
